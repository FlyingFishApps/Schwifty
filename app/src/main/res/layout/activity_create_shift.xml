<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddShiftPage">

    <TextView
        android:id="@+id/manager_panel_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_shift_txt"
        android:textColor="@color/colorPrimary"
        android:textSize="40dp"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:gravity="center"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/in_date"
        android:hint="Date"
        android:inputType="date"
        android:layout_marginTop="82dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/in_time"
        android:hint="Shift Start"
        android:inputType="time"
        android:layout_below="@+id/in_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/end_time"
        android:inputType="time"
        android:hint="Shift End"
        android:layout_below="@+id/in_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:padding="5dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/create_shift_btn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#4286f4"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/create_shift_btn" />
    </LinearLayout>


</LinearLayout>
</RelativeLayout>
