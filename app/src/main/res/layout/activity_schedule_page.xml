<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.montclair.mobilecomputing.r_soltes.schwifty.SchedulePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/job_list_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/fragment_schedule"
            android:textColor="@color/colorPrimary"
            android:textSize="40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/shiftBtn_FS"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:background="#4286f4"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Shift" />

            <Button
                android:id="@+id/releaseBtnFS"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:background="#4286f4"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Release" />

        </LinearLayout>

        <ListView
            android:id="@+id/job_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/job_list_tv"
            android:layout_centerHorizontal="true" />

    </LinearLayout>

</RelativeLayout>
