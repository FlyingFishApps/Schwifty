<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    tools:context="edu.montclair.mobilecomputing.r_soltes.schwifty.HomePage">

    <LinearLayout
        android:id="@+id/hp_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/hp_username_tv"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:text=""/>

        <LinearLayout
            android:layout_below="@+id/hp_username_tv"
            android:id="@+id/su_layout_or"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <View
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:background="#c4c8c9"
                android:layout_margin="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/hp_nav"/>

            <View
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:background="#c4c8c9"
                android:layout_margin="5dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp">

            <Button
                android:id="@+id/nav_profile"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#4286f4"
                android:padding="10dp"
                android:text="@string/nav_profile" />

            <Button
                android:id="@+id/nav_manager_panel"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#4286f4"
                android:padding="10dp"
                android:text="@string/nav_manager_panel" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp">

            <Button
                android:id="@+id/nav_job_list"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/nav_job_list"
                android:background="#4286f4"
                style="@style/Widget.AppCompat.Button.Colored"
                android:padding="10dp"/>

            <Button
                android:id="@+id/nav_schedule"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/nav_schedule"
                android:background="#4286f4"
                style="@style/Widget.AppCompat.Button.Colored"
                android:padding="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp">

            <Button
                android:id="@+id/nav_time_off"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/nav_time_off"
                android:background="#4286f4"
                style="@style/Widget.AppCompat.Button.Colored"
                android:padding="10dp"/>

            <Button
                android:id="@+id/nav_notifications"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/nav_notifications"
                android:background="#4286f4"
                style="@style/Widget.AppCompat.Button.Colored"
                android:padding="10dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp">
        <Button
            android:id="@+id/how_to"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"

            android:background="#4286f4"
            android:padding="10dp"
            android:text="@string/how_to" />

         <Button
            android:id="@+id/nav_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_weight="1"
            android:text="@string/nav_logout"
            android:background="#4286f4"
            style="@style/Widget.AppCompat.Button.Colored"
            android:padding="10dp"
             android:layout_marginLeft="10dp"
            android:layout_gravity="center"/>

</LinearLayout>
    </LinearLayout>


</LinearLayout>

