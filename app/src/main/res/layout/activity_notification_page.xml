<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_notification_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.montclair.mobilecomputing.r_soltes.schwifty.NotificationPage">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/noti_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.StatusBar.EventContent"
            android:hint="Enter the title of your notification"
            android:inputType="text" />

        <EditText
            android:id="@+id/noti_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.StatusBar.EventContent"
            android:hint="Enter the body of your note"
            android:maxLength="2000"
            android:inputType="text"/>

        <Button
            android:id="@+id/noti_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#4286f4"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="Submit"
            android:layout_gravity="center"/>

    </LinearLayout>

</RelativeLayout>
